{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "throttlingMethod": "simulate",
        "formFactor": "desktop",
        "screenEmulation": {
          "width": 1920,
          "height": 1080,
          "deviceScaleFactor": 1,
          "mobile": false
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 1 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }]
      }
    }
  }
}
